{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "jsx": "react",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "paths": {
      "@muyajs/core": ["muya/packages/core/src/index.ts"],
      "@muyajs/core/*": ["muya/packages/core/src/*"]
    }
  },
  "include": ["lib/**/*"]
}
